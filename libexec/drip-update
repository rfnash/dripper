#!/usr/bin/env bash

source drip-requirements
source drip-base
source drip-helper

require_git

REPOSITORY=git://github.com/fesplugas/dripper.git

cd $LOCAL_PATH

if [ ! -d .git ]; then
  git init
  git config core.autocrlf false
  git remote add origin $REPOSITORY
  git fetch origin
  git reset --hard origin/master
else 
  git pull --rebase origin refs/heads/master:refs/remotes/origin/master
  git checkout master
fi
