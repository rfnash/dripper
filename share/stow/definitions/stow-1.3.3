#!/usr/bin/env bash

PACKAGE=stow
VERSION=1.3.3

set_variables

if [ ! -z $DRIP_INSTALL ]; then
  pushd $SRC_PATH
  curl -O http://ftp.gnu.org/pub/gnu/stow/$STOW.tar.gz
  tar xzf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX \
    --program-suffix=_local
    --disable-dependency-tracking
  make install
  popd
  $PREFIX/bin/$STOW_BINARY -d $STOW_PATH $STOW
  # Skip default task!
  exit
fi

if [ ! -z $DRIP_LINK ]; then
  $PREFIX/bin/$STOW_BINARY -v -d $STOW_PATH $STOW
  exit
fi
