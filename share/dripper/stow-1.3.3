#!/usr/bin/env bash

PACKAGE=stow
VERSION=1.3.3

set_variables

if [ ! -z $DRIP_INSTALL ]; then
  pushd $SRC_PATH
  curl -O http://ftp.gnu.org/pub/gnu/stow/$STOW.tar.gz
  tar xzf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX
  make install
  popd
  $PREFIX/bin/stow -d $STOW_PATH $STOW
  # Skip default task!
  exit
fi
