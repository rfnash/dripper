#!/usr/bin/env bash

PACKAGE=ruby
VERSION=1.9.3-p125

set_variables

YAML_STOW=yaml-0.1.4
YAML_STOW_PATH=$STOW_PATH/$YAML_STOW

if _install; then
  cd $SRC_PATH
  curl --silent -O http://pyyaml.org/download/libyaml/$YAML_STOW.tar.gz
  tar xzf $YAML_STOW.tar.gz
  cd $YAML_STOW
  ./configure \
    --prefix=$YAML_STOW_PATH
  make install

  cd $SRC_PATH
  curl --silent -O http://ftp.ruby-lang.org/pub/ruby/1.9/$STOW.tar.gz
  tar xzf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX \
    --with-opt-dir=$YAML_STOW_PATH \
    --disable-install-doc \
    --enable-pthread \
    --enable-shared
  make && make install

  cd $PREFIX
  ./bin/gem update --system
  ./bin/gem install bundler --no-ri --no-rdoc
  ./bin/gem install rake --no-ri --no-rdoc
fi

if _info; then
  echo "Verify Ruby has been successfully installed:"
  $PREFIX/bin/ruby -rpsych -e 'puts Psych.load("win: true")'
  exit
fi

if _uninstall; then
  echo "No uninstall formula provided."
  exit
fi
