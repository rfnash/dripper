#!/usr/bin/env bash

PACKAGE=stow
VERSION=1.3.3

set_variables

if _install; then
  pushd $SRC_PATH
  curl -O http://ftp.gnu.org/pub/gnu/stow/$STOW.tar.gz
  tar xzf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX \
    --disable-dependency-tracking
  make install
  popd
  exit
fi

if _link; then
  echo "$1 already installed."
  exit
fi
