#!/usr/bin/env bash

PACKAGE=ruby

require_version
set_variables

YAML_STOW=yaml-0.1.4
YAML_STOW_PATH=$STOW_PATH/$YAML_STOW

if _install; then
  cd $SRC_PATH
  curl --silent -O http://ftp.ruby-lang.org/pub/ruby/2.0/$STOW.tar.gz
  tar xzf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX \
    --disable-install-doc \
    --enable-pthread \
    --enable-shared
  make && make install
fi

if _uninstall; then
  echo "No uninstall formula provided."
  exit
fi
