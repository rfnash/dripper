#!/usr/bin/env bash

PACKAGE=mutt
VERSION=1.5.21

set_variables

if [ ! -z $DRIP_INSTALL ]; then
  pushd $SRC_PATH
  curl -O ftp://ftp.mutt.org/mutt/devel/$STOW.tar.gz
  tar xvf $STOW.tar.gz
  cd $STOW
  ./configure \
    --prefix=$PREFIX \
    --disable-dependency-tracking \
    --disable-warnings \
    --with-ssl \
    --with-sasl \
    --with-gnutls \
    --with-gss \
    --enable-imap \
    --enable-smtp \
    --enable-pop \
    --enable-hcache \
    --with-homespool=.mbox
  make
  make install
  popd
fi
